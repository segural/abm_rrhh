<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="Mosaddek">
        <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
        <link rel="shortcut icon" href="/img/favicon.png">
    
        <title>ABM - Config</title>
    
        <!-- Bootstrap core CSS -->
        <link href="/css/bootstrap.min.css" rel="stylesheet">
        <link href="/css/bootstrap-reset.css" rel="stylesheet">
        <!--external css-->
        <link href="/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    
        <!--dynamic table-->
        <link href="/assets/advanced-datatable/media/css/demo_page.css" rel="stylesheet" />
        <link href="/assets/advanced-datatable/media/css/demo_table.css" rel="stylesheet" />
        <link rel="stylesheet" href="/assets/data-tables/DT_bootstrap.css" />
        
        <!-- Custom styles for this template -->
        <link href="/css/style.css" rel="stylesheet">
        <link href="/css/style-responsive.css" rel="stylesheet" />    
    
    </head>

    <body>

    <section id="container" class="">
        <!--header start-->
        <%- include('../partials/header.ejs') %>
        <!--header end-->

        <!--Include Sidebar-->
        <%- include('../partials/sidebar.ejs') %>
        <!--sidebar end-->

        <!--main content start-->
        <section id="main-content">
            <section class="wrapper">
                <!-- page start-->
                <div class="row">
                    <div class="col-sm-12">
                        <section class="card">
                            <header class="card-header">
                                <i class="fa fa-users "></i> Listado de Centros de Atención
                            <span class="tools pull-right">
                                <a href="javascript:;" class="fa fa-chevron-down"></a>
                                <a href="javascript:;" class="fa fa-times"></a>
                            </span>
                            </header>
                        <div class="card-body table-responsive">
                                <a data-toggle="modal" href="#newlocation"><button type="button" class="btn btn-vidt">Nuevo Centro</button></a>
                            <div class="adv-table" style="max-width: 1000px;">
                                <table  class="display table table-bordered table-striped" id="dynamic-table">
                                    <thead>
                                        <tr>
                                            <th>Nombre del Centro</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for( location of locations ) { %>
                                            <tr class="gradeX">
                                                <td><%= location.name %> </td>
                                                <td class="center hidden-phone">
                                                        <a data-toggle="modal" href="#deleteModal-<%= location.id %>">
                                                            <button class="btn btn-danger btn-sm" type="button"><i class="fa fa-trash-o"></i></button>
                                                        </a>
                                                    <!-- Modal -->
                                                        <div class="modal fade " id="deleteModal-<%= location.id %>" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
                                                            <div class="modal-dialog" role="document">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <h5 class="modal-title" id="deleteModal-<%= location.id %>">Confirmar eliminación del Centro</h5>
                                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                            <span aria-hidden="true">&times;</span>
                                                                        </button>
                                                                    </div>
                                                                    <div class="modal-body">
                                                                        Confirma la eliminación del Centro: <b><%= location.name %></b>?
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                                                                        <form action="/sysconfig/locations/<%= location.id %>?_method=DELETE" method="POST" id="form">
                                                                            <button type="submit" class="btn btn-primary">Eliminar</button>
                                                                        </form>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    <!-- modal -->
                                                </td>
                                                <% } %>
                                            </tr> 
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>Nombre del Centro</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </tfoot>
                            </table>                            
                            </div>
                        </div>  
                    <!-- Modal new Location-->
                    <form action="/sysconfig/newlocation" method="POST" id="new-location">
                        <div class="modal fade " id="newlocation" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="newlocation">Alta de un Centro Nuevo</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="col-lg-8" style="margin-top: 8px" id="number"><span class="px-3 py-2">Nombre del Centro Nuevo:</span>
                                        <input class="form-control" type="text" name="name" id="name" required></div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal" id="cancel">Cancelar</button>
                                        <button type="submit" class="btn btn-primary">Enviar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                        <!-- modal -->                      
                    </section>
                </div>
              </div>
              
              </div>
              </div>
              <!-- page end-->
          </section>
      </section>
      <!--main content end-->

      <!-- Include footer -->
      <!-- <%- include('../partials/footer.ejs') %> -->
      <!-- footer end -->
  </section>

    <!-- js placed at the end of the document so the pages load faster -->

    <script src="/js/jquery.js"></script>
    <script src="/js/jquery-ui-1.9.2.custom.min.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script class="include" type="text/javascript" src="/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="/js/jquery.scrollTo.min.js"></script>
    <script src="/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script type="text/javascript" language="javascript" src="/assets/advanced-datatable/media/js/jquery.dataTables.js"></script>
    <script type="text/javascript" src="/assets/data-tables/DT_bootstrap.js"></script>
    <script src="/js/respond.min.js" ></script>

    <!--dynamic table initialization -->
    <script src="/js/dynamic_table_init.js"></script>


    <!--common script for all pages-->
    <script src="/js/common-scripts.js"></script>

  </body>
</html>