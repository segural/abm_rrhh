  <body>

  <section id="container" class="">
      <!--header start-->
      <%- include('../../partials/header.ejs') %>
      <!--header end-->

      <!--Include Sidebar-->
      <%- include('../../partials/sidebar.ejs') %>
      <!--sidebar end-->

      <!--main content start-->
      <section id="main-content">
          <section class="wrapper">
              <!-- page start-->
              <div class="row">
                <div class="col-md-12">
                    <section class="card">
                        <header class="card-header">
                          <i class="fa fa-pencil"></i> Editar rol
                        </header>                       
                        <div class="card-body">
                          <form action="/sysconfig/roles/<%= roleToEdit.id %>?_method=PUT" method="POST" class="form-horizontal tasi-form">
                            <div class="col-auto">
                              <label class="sr-only" for="inlineFormInput">Rol</label>
                              <input type="text" name="name" class="form-control mb-2" id="inlineFormInput" value="<%= roleToEdit.name %>" placeholder="Rol">
                            </div>
                            <div class="col-auto">
                                <label class="control-label col-md-3">Permisos asociados</label>
                                <div class="col-md-9">
                                    <select multiple="multiple" class="multi-select" id="my_multi_select1" name="permissions">
                                      <% for( permission of permissions ) { %>                                
                                        <option value=<%= permission.id %> <%= selectedPermissions.includes(permission.id) ? 'selected' :'' %>><%=permission.name%></option>
                                      <% } %>                                                
                                    </select>
                                </div>
                            </div>
                            <div class="card-body">
                              <a href="/sysconfig/roles"><button type="button" class="btn btn-secondary">Cancelar</button></a>
                              <button type="submit" class="btn btn-vidt">Guardar</button>
                            </div>                                     
                          </form>
                        </div>                                  
                    </section>
                </div>
            </div>
              <!-- page end-->
          </section>
      </section>
      <!--main content end-->

      <!-- Include footer -->
      <!-- <%- include('../../partials/footer.ejs') %> -->
      <!-- footer end -->
  </section>

