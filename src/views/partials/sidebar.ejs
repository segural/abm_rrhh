<aside>
    <div id="sidebar"  class="nav-collapse ">
        <!-- sidebar menu start-->
        <ul class="sidebar-menu" id="nav-accordion">
            <li>
                <a href="/index">
                    <i class="fa fa-dashboard"></i>
                    <span>Dashboard</span>
                </a>
            </li>

            <li class="sub-menu">
                <a href="javascript:;" class="<%= req.originalUrl.includes('/invoices') ? 'active' : '' %>" >
                    <i class="fa fa-file"></i>
                    <span>Facturas</span>
                </a>
                <ul class="sub">
                    <li class="<%= req.originalUrl === '/invoices/list' ? 'active' : '' %>" ><a  href="/invoices/list">Historico</a></li>
                    <li class="<%= req.originalUrl === '/invoices/pending' ? 'active' : '' %>"><a  href="/invoices/pending">Pendientes</a></li>
