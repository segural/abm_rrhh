                        <li class="<%= req.originalUrl === '/invoices/otherpending' ? 'active' : '' %>"><a  href="/invoices/otherpending">En otro sector</a></li>
                    <% } %>
                    <% if (req.session.userCan.includes("facturas_pagar")) { %>
                        <li class="<%= req.originalUrl === '/invoices/paylist' ? 'active' : '' %>"><a  href="/invoices/paylist">Cola de pago</a></li>
                    <% } %>
                </ul>
            </li>

            <% if (req.session.userCan.includes("usuarios_gestionar") || req.session.userCan.includes("roles_gestionar") || req.session.userCan.includes("permisos_gestionar")) { %>
            <li class="sub-menu">
                <a href="javascript:;" class="<%= req.originalUrl.includes('/users') || req.originalUrl.includes('/roles') || req.originalUrl.includes('/permissions')? 'active' : '' %>">
                    <i class="fa fa-users"></i>
                    <span>Usuarios</span>
                </a>
                <ul class="sub">
                    <% if (req.session.userCan.includes("usuarios_gestionar")) { %>
                    <li class="<%= req.originalUrl === '/users/list' ? 'active' : '' %>" ><a  href="/users/list">Usuarios</a></li>
                    <% } %>
                    <% if (req.session.userCan.includes("roles_gestionar")) { %>
                        <li class="<%= req.originalUrl.includes('/roles') ? 'active' : '' %>" ><a  href="/roles/list">Roles</a></li>
                    <% } %>
                    <% if (req.session.userCan.includes("permisos_gestionar") && req.session.userCan.includes("sistema_administrar")) { %>
                        <li class="<%= req.originalUrl.includes('/permissions') ? 'active' : '' %>"><a  href="/permissions/list">Permisos</a></i></li>
                    <% } %>                    
                </ul>
            </li>
            <% } %>
            <% if (req.session.userCan.includes("proveedores_gestionar")) { %>
                <li class="sub-menu">
                    <a href="javascript:;" class="<%= req.originalUrl.includes('/suppliers') ? 'active' : '' %>">
                        <i class="fa fa-truck"></i>
                        <span>Proveedores</span>
                    </a>
                    <ul class="sub">
                        <li class="<%= req.originalUrl === '/suppliers/list' ? 'active' : '' %>" ><a  href="/suppliers/list">Listado</a></li>
                        <% if (req.session.userCan.includes("proveedores_crear")) { %>
                            <li class="<%= req.originalUrl === '/suppliers/pending' ? 'active' : '' %>" ><a  href="/suppliers/pending">Pendientes de alta</a></li>
                        <% } %>
                    </ul>
                </li>         
            <% } %>
            <% if (req.session.userCan.includes("cuentas_gestionar")) { %>
                <li class="sub-menu">
                    <a href="javascript:;" class="<%= req.originalUrl.includes('/accounts')? 'active' : '' %>">
                        <i class="fa fa-tasks"></i>
                        <span>Cuentas</span>
                    </a>
                    <ul class="sub">
                        <% if (req.session.userCan.includes("cuentas_gestionar")) { %>
                        <li class="<%= req.originalUrl === '/accounts/list' ? 'active' : '' %>" ><a  href="/accounts/list">Cuentas</a></li>
                        <% } %>
                    </ul>
                </li>
            <% } %>
            <% if (req.session.userCan.includes("ver_reportes")) { %>
            <li class="sub-menu">
                <a href="javascript:;" class="<%= req.originalUrl.includes('/reports')? 'active' : '' %>">
                    <i class="fa fa-list-ul"></i>
                    <span>Reportes</span>
                </a>
                <ul class="sub">
                    <li class="<%= req.originalUrl === '/reports/searchbysupplier' ? 'active' : '' %>" ><a  href="/reports/searchbysupplier">Facturas por Proveedor</a></li>
                </ul>
            </li>
            <% } %>
            <% if (req.session.userCan.includes("sistema_configuracion")) { %>
                <li class="sub-menu">
                    <a href="javascript:;" class="<%= req.originalUrl.includes('/config') ? 'active' : '' %>">
                        <i class="fa fa-cogs"></i>
                        <span>Configuraci√≥n</span>
                    </a>
                    <ul class="sub">
                        <li class="<%= req.originalUrl === '/config' ? 'active' : '' %>" ><a  href="/config">Panel de Control</a></li>
                    </ul>
                </li>         
            <% } %>
            <% if (req.session.userCan.includes("log_visualizar")) { %>
                <li class="sub-menu">
                    <a href="javascript:;" class="<%= req.originalUrl.includes('/userlog') || req.originalUrl.includes('/supplierlog') || req.originalUrl.includes('/invoicelog')? 'active' : '' %>">
                        <i class="fa fa-list-alt"></i>
                        <span>Logs</span>
                    </a>
                    <ul class="sub">
                        <li class="<%= req.originalUrl === '/userslog' ? 'active' : '' %>" ><a  href="/userlog">Logs de Usuarios</a></li>
                        <li class="<%= req.originalUrl === '/supplierslog' ? 'active' : '' %>" ><a  href="/supplierlog">Logs de Proveedores</a></li>
                        <li class="<%= req.originalUrl === '/invoiceslog' ? 'active' : '' %>" ><a  href="/invoicelog">Logs de Facturas</a></li>
                    </ul>
                </li>         
            <% } %>
        </ul>
        <!-- sidebar menu end-->
    </div>
</aside>