<header class="header white-bg">
    <div class="sidebar-toggle-box">
        <i class="fa fa-bars"></i>
    </div>
    <!--logo start-->
    <a href="/" class="logo"><img alt="logo" src="/img/logo.jpg" height="30px"></a>
    <!--logo end-->
    
    <div class="top-nav ">
        <!--search & user info start-->
        <ul class="nav pull-right top-menu">
            <li>
                <input type="text" class="form-control search" placeholder="Search">
            </li>
            <!-- user login dropdown start-->
            <li class="dropdown">
                <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                    <img alt="" src="/img/users/<%= locals.userLogged.image %>" height="30px">
                    <span class="username"><%= locals.userLogged.firstName %> <%= locals.userLogged.lastName %></span>
                    <b class="caret"></b>
                </a>
                <ul class="dropdown-menu extended logout dropdown-menu-right">
                    <div class="log-arrow-up"></div>                                       
                    <li>
                        <a>
                            <form action="/users/logout" method="POST" id="logout">
                                <button type="submit" class="btn btn-logout"><i class="fa fa-key"></i> Log Out</button>
                            </form>
                        </a>
                    </li>
                </ul>
            </li>            
            <!-- user login dropdown end -->
        </ul>
        <!--search & user info end-->
    </div>
</header>