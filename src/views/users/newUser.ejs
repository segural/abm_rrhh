<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="/img/favicon.png">

    <title>ABM - Usuarios</title>

    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/style-responsive.css" rel="stylesheet" />
</head>
<body>

<section id="container" class="">
    <!-- Include Header -->
    <%- include('../partials/header.ejs') %>
    <!--header end-->

    <!--Include Sidebar-->
        <%- include('../partials/sidebar.ejs') %>
    <!--sidebar end-->

        <!--main content start-->
        <section id="main-content">
            <section class="wrapper">
                <!-- page start-->
                <div class="col-lg-6" style="margin: auto;">
                    <section class="card">
                        <header class="card-header">
                            Alta usuario de red
                        </header>
                        <div class="card-body">
                            <form>
                                <div class="form-group row" style="padding: 0 15px;">
                                    <label class="col-sm-2 col-form-label">Nombres</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" name="firstName" placeholder="Nombres">
                                    </div>
                                </div>
                                <div class="form-group row" style="padding: 0 15px;">
                                    <label class="col-sm-2 col-form-label">Apellido</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" name="lastName" placeholder="Apellido">
                                    </div>
                                </div>
                                <div class="form-group row" style="padding: 0 15px;">
                                    <label class="col-sm-2 col-form-label">Posici贸n</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" name="position" placeholder="Posici贸n">
                                    </div>
                                </div>
                                <fieldset class="form-group">
                                    <div class="row" style="padding-left: 15px;" >
                                        <legend class="col-form-label col-sm-2 pt-0">Tipo de usuario</legend>
                                        <div class="col-sm-10">
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="external" value="0" checked>
                                                <label class="form-check-label">
                                                    Personal de n贸mina
                                                </label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="external" value="1">
                                                <label class="form-check-label">
                                                    Personal externo
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                                <div class="form-group row" style="padding-left: 15px;">
                                    <div class="col-sm-2">Mail corporativo</div>
                                    <div class="col-sm-10">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="gridCheck1">
                                            <label class="form-check-label" for="gridCheck1">
                                                No necesita correo corporativo
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row" style="padding: 0 15px;">
                                    <label class="col-sm-2 col-form-label">Dominio para mail</label>
                                    <div class="col-sm-10">
                                        <select type="text" class="form-control" name="maildomain">
                                            <option disabled selected></option>
                                            <% for (domain of domains) {%>
                                            <option value="<%= domain.domainName %>"> @<%= domain.domainName %></option>
                                            <% } %> 
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row" style="padding: 0 15px;">
                                    <label class="col-sm-2 col-form-label">Empresa</label>
                                    <div class="col-sm-10">
                                        <select type="text" class="form-control" name="maildomain">
                                            <option disabled selected></option>
                                            <% for (organization of organizations) {%>
                                            <option value="<%= organization.name %>"> <%= organization.name %></option>
                                            <% } %> 
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row" style="padding: 0 15px;">
                                    <label class="col-sm-2 col-form-label">Centro de Atenci贸n</label>
                                    <div class="col-sm-10">
                                        <select type="text" class="form-control" name="maildomain">
                                            <option disabled selected></option>
                                            <% for (location of locations) {%>
                                            <option value="<%= location.name %>"> <%= location.name %></option>
                                            <% } %> 
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row" style="padding: 0 15px;">
                                    <label class="col-sm-2 col-form-label">Departamento</label>
                                    <div class="col-sm-10">
                                        <select type="text" class="form-control" name="maildomain">
                                            <option disabled selected></option>
                                            <% for (department of departments) {%>
                                            <option value="<%= department.name %>"> <%= department.name %></option>
                                            <% } %> 
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div style="margin: auto; padding-top: 15px;">
                                        <button type="submit" class="btn btn-danger">Enviar</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </section>
                </div>
                <!-- page end-->
            </section>
        </section>
        <!--main content end-->

    <!-- Include footer -->
    <!-- <%- include('../partials/footer.ejs') %> -->
    <!-- footer end -->
</section>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="/js/jquery.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script class="include" type="text/javascript" src="/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="/js/jquery.scrollTo.min.js"></script>
    <script src="/js/slidebars.min.js"></script>
    <script src="/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="/js/respond.min.js" ></script>

    <!--common script for all pages-->
    <script src="/js/common-scripts.js"></script>

</body>
</html>
