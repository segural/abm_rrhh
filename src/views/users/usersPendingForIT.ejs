<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="/img/favicon.png">

    <title>ABM - Usuarios</title>

        <!-- Bootstrap core CSS -->
        <link href="/css/bootstrap.min.css" rel="stylesheet">
        <link href="/css/bootstrap-reset.css" rel="stylesheet">
        
        <!--external css-->
        <link href="/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    
        <!--dynamic table-->
        <link href="/assets/advanced-datatable/media/css/demo_page.css" rel="stylesheet" />
        <link href="/assets/advanced-datatable/media/css/demo_table.css" rel="stylesheet" />
        <link rel="stylesheet" href="/assets/data-tables/DT_bootstrap.css" />
        
        <!-- Custom styles for this template -->
        <link href="/css/style.css" rel="stylesheet">
        <link href="/css/style-responsive.css" rel="stylesheet" />    
</head>
<body>

<section id="container" class="">
    <!-- Include Header -->
    <%- include('../partials/header.ejs') %>
    <!--header end-->

    <!--Include Sidebar-->
        <%- include('../partials/sidebar.ejs') %>
    <!--sidebar end-->

        <!--main content start-->
        <section id="main-content">
            <section class="wrapper">
                <!-- page start-->
                <div class="row">
                    <div class="col-lg-6" style="margin: auto;">
                        <section class="card">
                            <header class="card-header">
                                <i class="fa fa-users "></i> Listado de Usuarios Pendientes de Alta
                            <span class="tools pull-right">
                                <a href="javascript:;" class="fa fa-chevron-down"></a>
                                <a href="javascript:;" class="fa fa-times"></a>
                            </span>
                            </header>
                        <div class="card-body table-responsive">
                            <div class="adv-table" style="max-width: 1000px;">
                                <table  class="display table table-bordered table-striped" id="dynamic-table">
                                    <thead>
                                        <tr>
                                            <th>Nombre Completo</th>
                                            <th>Posici贸n</th>
                                            <th>Departamento</th>
                                            <th>Estado</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for( user of users ) { %>
                                            <% if (user.status != "ok") {%> 
                                            <tr class="gradeX">
                                                <td><%= user.firstName %> <%= user.lastName %></td>
                                                <td><%= user.position %> </td>
                                                <td><%= user.department %> </td>
                                                <td> <% if (user.status == "it") {%>  
                                                    <span class="badge badge-secondary label-mini">Pendiente IT</span>
                                                    <% } %> 
                                                </td>
                                                <td class="center hidden-phone">
                                                        <a href="/users/edit/<%= user.id %>">
                                                            <button class="btn btn-primary btn-sm" type="button"><i class="fa fa-edit"></i></button>
                                                        </a>
                                                    <!-- Modal -->
                                                        <div class="modal fade " id="deleteModal-<%= user.id %>" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
                                                            <div class="modal-dialog" role="document">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <h5 class="modal-title" id="deleteModal-<%= user.id %>">Confirmar eliminaci贸n</h5>
                                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                            <span aria-hidden="true">&times;</span>
                                                                        </button>
                                                                    </div>
                                                                    <div class="modal-body">
                                                                        Confirma la eliminaci贸n de: <b><%= user.firstName %> <%= user.lastName %></b>?
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                                                                        <form action="/users/destroy/<%= user.id %>?_method=DELETE" method="POST" id="form">
                                                                            <button type="submit" class="btn btn-primary">Eliminar</button>
                                                                        </form>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    <!-- modal -->
                                                </td>
                                            </tr>
                                            <% }} %>
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>Nombre Completo</th>
                                            <th>Posici贸n</th>
                                            <th>Departamento</th>
                                            <th>Estado</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </tfoot>
                            </table>                            
                            </div>
                        </div>                   
                    </section>
                </div>
              </div>
              
              </div>
              </div>
              <!-- page end-->
          </section>
      </section>
        <!--main content end-->

    <!-- Include footer -->
    <!-- <%- include('../partials/footer.ejs') %> -->
    <!-- footer end -->
</section>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="/js/jquery.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script class="include" type="text/javascript" src="/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="/js/jquery.scrollTo.min.js"></script>
    <script src="/js/slidebars.min.js"></script>
    <script src="/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="/js/respond.min.js" ></script>

    <!--common script for all pages-->
    <script src="/js/common-scripts.js"></script>

</body>
</html>
