    <body class="login-body">

        <div class="container">
        <form class="form-signin" action="/login" method="POST" id="form" novalidate>
            <% if (locals.errors && errors.noUser) { %>
                <p class="feedback"><%= errors.noUser.msg %></p>
            <% } %>
            <% if (locals.errors && errors.userInactive) { %>
                <p class="feedback"><%= errors.userInactive.msg %></p>
            <% } %> 
            <h2 class="form-signin-heading">INICIAR SESION</h2>
            <div class="login-wrap">
                <input type="text" class="form-control" name="user" placeholder="Usuario" autofocus value="<%= locals.old && old.user %>">
                <% if (locals.errors && errors.user) { %>
                    <p class="feedback"><%= errors.user.msg %></p>
                <% } %>
                <input type="password" class="form-control" name="password" placeholder="ContraseÃ±a" value="<%= locals.old && old.password %>">
                <% if (locals.errors && errors.password) { %>
                    <p class="feedback"><%= errors.password.msg %></p>
                <% } %>
                <label class="checkbox">
                    <input type="checkbox" name="rememberMe"> Recordame
                </label>
                <button class="btn btn-lg btn-login btn-block" type="submit">Enviar</button>
            </div>
        </form>
    </div>



    <!-- js placed at the end of the document so the pages load faster -->
    <script src="js/jquery.js"></script>
    <script src="js/bootstrap.bundle.min.js"></script>


  </body>
</html>